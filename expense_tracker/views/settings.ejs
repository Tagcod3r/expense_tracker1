<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expense Tracker - Settings</title>
    <link rel="icon" href="/logo.webp" type="image/x-icon" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Reuse your dashboard CSS -->
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/confirmation.css" />
    <!-- Include a settings-specific CSS file -->
    <link rel="stylesheet" href="/css/settings.css" />
    <script src="/js/dashboard.js" defer></script>
  </head>
  <body>
    <%- include("partials/dashboardsidebar", { activePage: "settings" }) %>
    <%- include("partials/confirmation") %>
    <script src="/js/confirmation.js" defer ></script>
    <!-- Main Dashboard Content -->
    <main class="dashboard">
      <header class="dashboard-header">
        <h1>Settings</h1>
        <!-- Hamburger menu visible on mobile -->
        <button id="menu-toggle" class="menu-toggle">â˜°</button>
      </header>

      <!-- Settings Options Section -->
      <section class="settings-options">
        <!-- Logout Option -->
       <!-- In your settings ejs (dashboardSidebar or here in the settings content) -->
        <div class="option-card logout">
          <h2>Logout</h2>
          <p>Click below to log out of your account.</p>
          <a href="/logout" class="logout-btn" style="color:white; text-decoration: none;">Logout</a>
        </div>

        <div class="option-card delete-profile">
            <h2>Delete Profile</h2>
            <p class="warning">Warning: This action cannot be undone.</p>
            <button id="delete-button" class="btn delete-button">Delete Profile</button>
          </div>
      </section>
    </main>
    <!-- Footer -->
    <footer class="footer">
      <div class="footer-inner">
        <p>&copy; 2025 Expense Tracker. All rights reserved.</p>
      </div>
    </footer>

    <!-- Optional: Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
